                  - service: input_number.set_value
                    metadata: {}
                    data:
                      value: 90
                    target:
                      entity_id: input_number.evse_max_charge
                  - service: input_boolean.turn_off
                    target:
                      entity_id:
                        - input_boolean.charge_overnight
                    data: {}
                  - service: input_boolean.turn_on
